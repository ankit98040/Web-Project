<%- include ('includes/header') %>

<div class="container reg-form">

	<% if (locals.errors) { %>
		<% errors.forEach(function(error){ %>
			<div class="alert alert-danger"><%= error.msg %></div>
		<% }) %>
	<% } %>

<form class="form-signin" method="post" action="/users/register">
  
  <h1 class="h3 mb-3 font-weight-normal">User Registration</h1>

  <label class="sr-only">Name</label>
  <input type="text" name="name" class="form-control" value="<%= (!!locals.name)?name:'' %>" placeholder="Name" autofocus>
  <br>

  <label class="sr-only">Email address</label>
  <input type="text" name="email" class="form-control" value="<%= (!!locals.email)?email:'' %>" placeholder="Email address"  autofocus>
  <br>

  <label class="sr-only">Username</label>
  <input type="text" name="username" class="form-control" value="<%= (!!locals.username)?username:'' %>" placeholder="Username" autofocus>
  <br>

  <label class="sr-only">Password</label>
  <input type="password" name="password" class="form-control" value="<%= (!!locals.password)?password:'' %>" placeholder="Password" ><br>

  <label class="sr-only">Confirm Password</label>
  <input type="password" name="password2" class="form-control" value="<%= (!!locals.password2)?password2:'' %>" placeholder="Confirm Password" ><br>
  

  <p>already registerer ? <a href="/users/login">Login</a></p><br>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>


  <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
</form>
</div>

<%- include ('includes/footer') %>